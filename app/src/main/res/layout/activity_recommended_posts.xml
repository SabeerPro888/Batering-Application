<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendedPosts">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:id="@+id/innerlayout"
        app:layout_constraintVertical_bias="0.023">

        <androidx.cardview.widget.CardView
            android:id="@+id/recommendedCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_marginBottom="100dp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/txtNoRecmmendedItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Items found that matches your Upload"
            android:textSize="20dp"
            android:textStyle="italic" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:id="@+id/imgNoRecommendedItems"
            android:src="@drawable/baseline_sentiment_dissatisfied_24"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>