<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid color background covering the entire area -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
        </shape>
    </item>
    <!-- Rounded rectangle shape with stroke -->
    <item android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- Adjust the radius to control the roundness of corners -->
            <stroke
                android:width="3dp"
                android:color="@color/my_primary" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
